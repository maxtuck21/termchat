var prompt = require('prompt');
var login = require('facebook-chat-api');

prompt.start();

var fb_email;
var fb_password;

prompt.get(['email', 'password'], function(err, result) {
    if (err) return console.log("Error: Invalid username or password.");
    fb_email = result.email;
    fb_password = result.password; 
});

login({email: fb_email, password: fb_password}, function (err, api) {
    if(err) return console.error(err);
    console.log('login success!');

});
